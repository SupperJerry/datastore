<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <bean id="monitor" class="org.apache.airavata.datastore.monitor.impl.LocalFileSysMonitor"/>

    <bean id="server" class="org.apache.airavata.datastore.monitor.MonitorService">
        <property name="monitor" ref="monitor" />
    </bean>

    <bean id="parserResolver" class="org.apache.airavata.datastore.parser.resolver.impl.LocalFileSysParserResolver"/>

</beans>